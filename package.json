{
  "name": "@vcwebnetworks/typescript-with-jest",
  "version": "1.0.0",
  "description": "Initial framework for automated typescript and test based projects",
  "main": "./dist/server/index.js",
  "files": [
    "./dist/**/*"
  ],
  "scripts": {
    "dev": "npm run tsnd -- './src/server/index.ts'",
    "dev:docker": "docker-compose -f docker-compose.yml up --build -d",
    "tsnd": "ts-node-dev --poll --respawn --transpile-only --ignore-watch './node_modules'",
    "prestart": "npx sequelize-cli db:migrate",
    "start": "node ./dist/server/index.js",
    "updatelibs": "npx npm-check -s -u",
    "check-ts": "npm run lint && npx tsc -p ./tsconfig.json --noEmit",
    "clean": "rm -rf ./dist",
    "lint": "eslint --ext ts ./src ./database --fix",
    "build": "npm run clean && npx tsc -p tsconfig-build.json",
    "test": "cross-env NODE_ENV=test jest --passWithNoTests --runInBand --no-cache",
    "test:watch": "npm run test -- --watch",
    "test:unit": "npm run test:watch -c ./jest-unit.config.ts",
    "test:integration": "npm run test:watch -c ./jest-integration.config.ts",
    "test:staged": "npm run test -- -o",
    "test:coverage": "npm run test -- --coverage",
    "db:check-ts": "npx tsc ./database/{migrations,seeders}/*.ts --noEmit",
    "db:compile": "./scripts/sequelize-database-compile.sh",
    "db:migrate": "./scripts/sequelize-run-migration.sh",
    "prepare": "husky install"
  },
  "keywords": [
    "nodejs",
    "jest",
    "typescript",
    "ddd",
    "clean-architecture",
    "javascript",
    "structure"
  ],
  "author": "Vagner Cardoso <vagner.cardoso@vcwebnetworks.com.br>",
  "license": "MIT",
  "devDependencies": {
    "@swc/cli": "0.1.57",
    "@swc/core": "1.3.23",
    "@swc/jest": "0.2.24",
    "@types/bcryptjs": "2.4.2",
    "@types/cookie-parser": "1.4.3",
    "@types/dotenv": "8.2.0",
    "@types/dottie": "2.0.4",
    "@types/express": "4.17.15",
    "@types/helmet": "4.0.0",
    "@types/jest": "29.2.4",
    "@types/jsonwebtoken": "8.5.9",
    "@types/module-alias": "2.0.1",
    "@types/morgan": "1.9.3",
    "@types/node": "18.11.17",
    "@types/sequelize": "4.28.14",
    "@types/supertest": "2.0.12",
    "@types/swagger-ui-express": "4.1.3",
    "@types/validator": "13.7.10",
    "@typescript-eslint/eslint-plugin": "5.47.0",
    "@typescript-eslint/parser": "5.47.0",
    "commitizen": "4.2.6",
    "cross-env": "7.0.3",
    "cz-conventional-changelog": "3.3.0",
    "eslint": "8.30.0",
    "eslint-config-airbnb-base": "15.0.0",
    "eslint-config-prettier": "8.5.0",
    "eslint-import-resolver-typescript": "3.5.2",
    "eslint-plugin-import": "2.26.0",
    "eslint-plugin-import-helpers": "1.3.1",
    "eslint-plugin-prettier": "4.2.1",
    "husky": "8.0.2",
    "jest": "29.3.1",
    "prettier": "2.8.1",
    "rimraf": "3.0.2",
    "sequelize-cli": "6.5.2",
    "supertest": "6.3.3",
    "ts-node-dev": "2.0.0",
    "typescript": "4.9.4"
  },
  "dependencies": {
    "bcryptjs": "2.4.3",
    "cookie-parser": "1.4.6",
    "dotenv": "16.0.3",
    "dottie": "2.0.2",
    "express": "4.18.2",
    "express-async-errors": "3.1.1",
    "helmet": "6.0.1",
    "http-graceful-shutdown": "3.1.12",
    "ioredis": "5.2.4",
    "jsonwebtoken": "8.5.1",
    "module-alias": "2.2.2",
    "moment-timezone": "0.5.40",
    "morgan": "1.10.0",
    "pg": "8.8.0",
    "pg-hstore": "2.3.4",
    "reflect-metadata": "0.1.13",
    "sequelize": "6.28.0",
    "sequelize-typescript": "2.1.5",
    "swagger-ui-express": "4.6.0",
    "winston": "3.8.2"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
