{
  "name": "nodejs-structure-with-typescript",
  "version": "1.0.0",
  "description": "Initial framework for automated typescript and test based projects",
  "main": "./dist/http-server/index.js",
  "files": [
    "./dist/**/*"
  ],
  "scripts": {
    "dev:local": "cross-env NODE_ENV=local tsx watch 'src/rest-api/server.ts'",
    "dev:docker": "cross-env NODE_ENV=local docker-compose -f docker-compose.yml up --build",
    "start": "cross-env NODE_ENV=production node ./dist/rest-api/server.js",
    "updatelibs": "npx npm-check -s -u",
    "check-ts": "npm run lint:eslint && npx tsc -p ./tsconfig.json --noEmit",
    "clean": "rm -rf ./dist",
    "lint:eslint": "eslint --ext ts ./src --fix",
    "lint:prettier": "npx prettier --write ./src",
    "build": "npm run clean && npx tsc",
    "test:all": "cross-env NODE_ENV=test vitest run --dir src/",
    "test:watch": "cross-env NODE_ENV=test vitest --dir src/",
    "test:coverage": "cross-env NODE_ENV=test vitest run --coverage",
    "test:related": "cross-env NODE_ENV=test vitest related --run",
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s -r 0",
    "generate-tag": "git tag -a --force v$(node -e \"console.log(require('./package.json').version)\") HEAD",
    "prepare": "husky install"
  },
  "keywords": [
    "nodejs",
    "jest",
    "typescript",
    "ddd",
    "clean-architecture",
    "javascript",
    "express",
    "postgres"
  ],
  "author": "Vagner Cardoso <vagnercardosoweb@gmail.com>",
  "license": "MIT",
  "devDependencies": {
    "@types/bcryptjs": "2.4.2",
    "@types/compression": "1.7.2",
    "@types/cookie-parser": "1.4.3",
    "@types/dotenv": "8.2.0",
    "@types/dottie": "2.0.5",
    "@types/express": "4.17.17",
    "@types/helmet": "4.0.0",
    "@types/jsonwebtoken": "9.0.2",
    "@types/module-alias": "2.0.1",
    "@types/morgan": "1.9.4",
    "@types/node": "20.3.1",
    "@types/pg": "8.10.2",
    "@types/response-time": "2.3.5",
    "@types/swagger-ui-express": "4.1.3",
    "@types/validator": "13.7.17",
    "@typescript-eslint/eslint-plugin": "5.60.0",
    "@typescript-eslint/parser": "5.60.0",
    "@vitest/coverage-v8": "0.32.2",
    "commitizen": "4.3.0",
    "conventional-changelog-cli": "3.0.0",
    "cross-env": "7.0.3",
    "cz-conventional-changelog": "3.3.0",
    "eslint": "8.43.0",
    "eslint-config-prettier": "8.8.0",
    "eslint-config-standard": "17.1.0",
    "eslint-import-resolver-typescript": "3.5.5",
    "eslint-plugin-import": "2.27.5",
    "eslint-plugin-import-helpers": "1.3.1",
    "eslint-plugin-prettier": "4.2.1",
    "eslint-plugin-promise": "6.1.1",
    "husky": "8.0.3",
    "prettier": "2.8.8",
    "tsx": "3.12.7",
    "typescript": "<5.1.0",
    "vite-tsconfig-paths": "4.2.0",
    "vitest": "0.32.2"
  },
  "dependencies": {
    "bcryptjs": "2.4.3",
    "compression": "1.7.4",
    "cookie-parser": "1.4.6",
    "dotenv": "16.3.1",
    "dottie": "2.0.6",
    "express": "4.18.2",
    "express-async-errors": "3.1.1",
    "helmet": "7.0.0",
    "http-graceful-shutdown": "3.1.13",
    "ioredis": "5.3.2",
    "jsonwebtoken": "9.0.0",
    "module-alias": "2.2.3",
    "morgan": "1.10.0",
    "pg": "8.11.0",
    "response-time": "2.3.2",
    "swagger-ui-express": "4.6.3"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
