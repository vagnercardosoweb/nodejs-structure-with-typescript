{
  "name": "@vcwebnetworks/typescript-with-jest",
  "version": "1.0.0",
  "description": "Initial framework for automated typescript and test based projects",
  "main": "./dist/server/index.js",
  "files": [
    "./dist/**/*"
  ],
  "scripts": {
    "dev": "npm run tsnd -- './src/server/index.ts'",
    "dev:docker": "docker-compose -f docker-compose.yml up --build -d",
    "tsnd": "ts-node-dev --poll --respawn --transpile-only --ignore-watch './node_modules'",
    "start": "node ./dist/server/index.js",
    "check": "npx npm-check -s -u",
    "clean": "rm -rf ./dist",
    "lint": "eslint --ext ts ./src --fix",
    "build": "npm run clean && npx tsc -p tsconfig-build.json",
    "test": "cross-env NODE_ENV=test jest --passWithNoTests --runInBand --no-cache",
    "test:watch": "npm run test -- --watch",
    "test:unit": "npm run test:watch -c ./jest-unit.config.ts",
    "test:integration": "npm run test:watch -c ./jest-integration.config.ts",
    "test:staged": "npm run test -- -o",
    "test:coverage": "npm run test -- --coverage",
    "db:compile": ".bin/sequelize-database-compile.sh",
    "db:migrate": ".bin/sequelize-run-migration.sh",
    "prepare": "husky install"
  },
  "keywords": [
    "nodejs",
    "jest",
    "typescript",
    "ddd",
    "clean-architecture",
    "javascript",
    "structure"
  ],
  "author": "Vagner Cardoso <vagner.cardoso@vcwebnetworks.com.br>",
  "license": "MIT",
  "devDependencies": {
    "@swc/cli": "0.1.57",
    "@swc/core": "1.3.3",
    "@swc/jest": "0.2.22",
    "@types/cookie-parser": "1.4.3",
    "@types/dotenv": "8.2.0",
    "@types/express": "4.17.14",
    "@types/helmet": "4.0.0",
    "@types/jest": "29.0.3",
    "@types/jsonwebtoken": "8.5.9",
    "@types/module-alias": "2.0.1",
    "@types/morgan": "1.9.3",
    "@types/node": "18.7.19",
    "@types/sequelize": "4.28.14",
    "@types/validator": "13.7.6",
    "@typescript-eslint/eslint-plugin": "5.38.0",
    "@typescript-eslint/parser": "5.38.0",
    "commitizen": "4.2.5",
    "cross-env": "7.0.3",
    "cz-conventional-changelog": "3.3.0",
    "eslint": "8.24.0",
    "eslint-config-airbnb-base": "15.0.0",
    "eslint-config-prettier": "8.5.0",
    "eslint-import-resolver-typescript": "3.5.1",
    "eslint-plugin-import": "2.26.0",
    "eslint-plugin-import-helpers": "1.2.1",
    "eslint-plugin-prettier": "4.2.1",
    "husky": "8.0.1",
    "jest": "29.0.3",
    "prettier": "2.7.1",
    "rimraf": "3.0.2",
    "sequelize-cli": "6.4.1",
    "ts-node-dev": "2.0.0",
    "typescript": "4.8.3"
  },
  "dependencies": {
    "cookie-parser": "1.4.6",
    "dotenv": "16.0.2",
    "express": "4.18.1",
    "express-async-errors": "3.1.1",
    "helmet": "6.0.0",
    "http-graceful-shutdown": "3.1.8",
    "ioredis": "5.2.3",
    "jsonwebtoken": "8.5.1",
    "module-alias": "2.2.2",
    "morgan": "1.10.0",
    "pg": "8.8.0",
    "pg-hstore": "2.3.4",
    "reflect-metadata": "0.1.13",
    "sequelize": "6.23.1",
    "sequelize-typescript": "2.1.3",
    "winston": "3.8.2"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
