{
  "name": "nodejs-structure-with-typescript",
  "version": "1.0.0",
  "description": "Initial framework for automated typescript and test based projects",
  "main": "./dist/http-server/index.js",
  "files": [
    "./dist/**/*"
  ],
  "scripts": {
    "dev:local": "node --import tsx --env-file=.env.local --watch ./src/rest-api/server.ts",
    "dev:docker": "docker-compose -f docker-compose.yml up --build -d",
    "start": "node --env-file=.env.production ./dist/rest-api/server.js",
    "updatelibs": "npx npm-check -s -u",
    "tsc:check": "npx tsc -p ./tsconfig.json --noEmit",
    "check-ts": "npm run eslint:fix && npm run tsc:check",
    "check-ts:ci": "npm run eslint:check && npm run tsc:check",
    "eslint:check": "eslint --ext ts ./src",
    "eslint:fix": "npm run eslint:check -- --fix",
    "prettier:write": "npx prettier --write ./src",
    "clean": "rm -rf ./dist",
    "build": "npm run clean && npx tsc -p ./tsconfig.build.json",
    "test:all": "vitest run --dir src/",
    "test:watch": "vitest --dir src/",
    "test:coverage": "vitest run --coverage",
    "test:related": "vitest related --run",
    "migrator:up": "npm run build && node --env-file=.env.$(echo $NODE_ENV) ./migrations/index.js up && npm run clean",
    "migrator:down:last": "npm run build && node --env-file=.env.$(echo $NODE_ENV) ./migrations/index.js down 1 && npm run clean",
    "migrator:down:all": "npm run build && node --env-file=.env.$(echo $NODE_ENV) ./migrations/index.js down -1 && npm run clean",
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s",
    "generate-tag": "git tag -a --force v$(node -e \"console.log(require('./package.json').version)\") HEAD",
    "prepare": "husky install"
  },
  "keywords": [
    "nodejs",
    "jest",
    "typescript",
    "ddd",
    "clean-architecture",
    "javascript",
    "express",
    "postgres"
  ],
  "author": "Vagner Cardoso <vagnercardosoweb@gmail.com>",
  "license": "MIT",
  "engines": {
    "node": ">=20"
  },
  "devDependencies": {
    "@commitlint/cli": "18.4.3",
    "@commitlint/config-conventional": "18.4.3",
    "@types/bcryptjs": "2.4.6",
    "@types/compression": "1.7.5",
    "@types/cookie-parser": "1.4.6",
    "@types/dotenv": "8.2.0",
    "@types/dottie": "2.0.7",
    "@types/express": "4.17.21",
    "@types/helmet": "4.0.0",
    "@types/jsonwebtoken": "9.0.5",
    "@types/module-alias": "2.0.4",
    "@types/morgan": "1.9.9",
    "@types/node": "20.10.4",
    "@types/pg": "8.10.9",
    "@types/response-time": "2.3.8",
    "@types/swagger-ui-express": "4.1.6",
    "@typescript-eslint/eslint-plugin": "6.14.0",
    "@typescript-eslint/parser": "6.14.0",
    "@vitest/coverage-v8": "1.0.4",
    "conventional-changelog-cli": "4.1.0",
    "cross-env": "7.0.3",
    "eslint": "8.56.0",
    "eslint-config-prettier": "9.1.0",
    "eslint-config-standard": "17.1.0",
    "eslint-import-resolver-typescript": "3.6.1",
    "eslint-plugin-import": "2.29.1",
    "eslint-plugin-import-helpers": "1.3.1",
    "eslint-plugin-prettier": "5.0.1",
    "eslint-plugin-promise": "6.1.1",
    "husky": "8.0.3",
    "prettier": "3.1.1",
    "tsx": "4.6.2",
    "typescript": "5.3.3",
    "vite-tsconfig-paths": "4.2.2",
    "vitest": "1.0.4"
  },
  "dependencies": {
    "bcryptjs": "2.4.3",
    "compression": "1.7.4",
    "cookie-parser": "1.4.6",
    "cross-env": "7.0.3",
    "dotenv": "16.3.1",
    "dottie": "2.0.6",
    "express": "4.18.2",
    "helmet": "7.1.0",
    "http-graceful-shutdown": "3.1.13",
    "ioredis": "5.3.2",
    "jsonwebtoken": "9.0.2",
    "module-alias": "2.2.3",
    "morgan": "1.10.0",
    "pg": "8.11.3",
    "response-time": "2.3.2",
    "swagger-ui-express": "5.0.0"
  }
}
